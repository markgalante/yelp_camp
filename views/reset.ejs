<%- include ("partials/header") %>

<h1 class="mt-5">Reset Password</h1>
<div class="row">
    <div class="forms">
        <form method="POST" action="/reset/<%= token %>">
            <div class="form-group">
                <label for="password">Please enter your new password</label>
                <input class="form-control" type="password" name="new" placeholder="New password">
            </div>
            <div class="form-group">
                <label for="confirm">Please re-enter your new password</label>
                <input class="form-control" type="confirm" name="new" placeholder="Re-enter new password">
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Submit">
            </div> </form>
    </div>
</div>

<%- include ("partials/footer") %>