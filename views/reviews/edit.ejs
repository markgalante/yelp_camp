<%- include ("../partials/header")%>

<div class="container">
    <h1 style="text-align:center;"> Edit your review for <%= campground.name %> </h1>
    <div class="row">
		<div style="width: 30%; margin:25px auto;">
			<form action="/campgrounds/<%= campground.slug %>/reviews/<%= review._id%>?_method=PUT" method="POST"> 
				<div class="form-group">
                    <label for="rating">Leave a rating:</label>
                    <fieldset class="staraility-basic form-group" id="rating">
                        <div>
                            <input type="radio" name="review[rating]" id="first-rate5" value="5" <% if(review.rating === 5 ){ %> checked <% } %>/>
                            <label for="first-rate5" title="5 stars - Amazing!">
                                <%- '<i class="fa fa-star checked" aria-hidden="true"></i>'.repeat(5) %>
                            </label>
                        </div>
                        <div>
                            <input type="radio" name="review[rating]" id="first-rate4" value="4" <% if(review.rating === 4 ){ %> checked <% } %>/>
                            <label for="first-rate4" title="4 stars - Very Good!">
                                <%- '<i class="fa fa-star checked" aria-hidden="true"></i>'.repeat(4) %>
                            </label>
                        </div>
                        <div>
                            <input type="radio" name="review[rating]" id="first-rate3" value="3" <% if(review.rating === 3 ){ %> checked <% } %>/>
                            <label for="first-rate4" title="3 stars - Average">
                                <%- '<i class="fa fa-star checked" aria-hidden="true"></i>'.repeat(3) %>
                            </label>
                        </div>
                        <div>
                            <input type="radio" name="review[rating]" id="first-rate2" value="2" <% if(review.rating === 2 ){ %> checked <% } %>/>
                            <label for="first-rate4" title="2 stars - Not great">
                                <%- '<i class="fa fa-star checked" aria-hidden="true"></i>'.repeat(2) %>
                            </label>
                        </div>
                        <div>
                            <input type="radio" name="review[rating]" id="first-rate1" value="1" <% if(review.rating === 1 ){ %> checked <% } %>/>
                            <label for="first-rate4" title="1 star - Terrible">
                                <%- '<i class="fa fa-star checked" aria-hidden="true"></i>'.repeat(1) %>
                            </label>
                        </div>
                    </fieldset>
				</div>
				<div class="form-group">
                    <textarea class="form-control" type="text" name="review[text]" rows=5><%= review.text %></textarea>
                </div>
				<div class="form-group">
					<button class="btn btn-lg btn-outline-primary btn-block">Edit review</button>
				</div>
			</form>
			<a href="/campgrounds/<%= campground.slug %>">Go Back</a>	
		</div>
    </div>
</div>

<%- include ("../partials/footer") %>