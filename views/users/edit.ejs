<%- include ("../partials/header") %>

<h1 class="mt-5">Edit Profile</h1>
<div class="row">
    <div class="forms">
        <form  method="POST" action="/users/<%= user.id %>?_method=PUT" enctype="multipart/form-data">
            <div class="form-group">
                <input class="form-control" type="text"     name="user[username]"     value="<%= user.username %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text"     name="user[firstName]"    value="<%= user.firstName %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text"     name="user[lastName]"     value="<%= user.lastName %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="email"    name="user[email]"        value="<%= user.email %>">
            </div>
            <div class="form-group">
                <label for="image">Edit Profile Picture</label>
                <input type="file" id="image"     name="image"       accept="image/*">
            </div>
            <% if (!user.isAdmin){ %> 
                <div class="form-group">
                    <input class="form-control" type="text"     name="user[adminCode]"    placeholder="Admin Code">
                </div>
            <% } %>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit"   value="Edit">
            </div> 
        </form>
    </div>
</div>


<%- include ("../partials/footer") %>